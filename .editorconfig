; http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 8

[*.{md}]
indent_size = 4
trim_trailing_whitespace = false

# JSON Files
[*.{json}]
indent_size = 2

[Makefile]
indent_style = tab